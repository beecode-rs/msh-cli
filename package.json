	},
	"bugs": {
		"url": "https://github.com/beecode-rs/msh-cli/issues"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-conventional-changelog"
		}
	},
	"dependencies": {
		"@beecode/msh-app-boot": "0.1.0-alpha",
		"@beecode/msh-env": "0.1.0-alpha",
		"@beecode/msh-logger": "0.2.0-alpha",
		"@beecode/msh-util": "1.2.0",
